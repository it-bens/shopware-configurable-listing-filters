{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noErrorTruncation": false,
    "paths": {
      "@/*": ["./src/Resources/app/administration/src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "types": ["./src/Resources/app/administration/src/types"]
  },
  "include": [
    "./src/Resources/app/administration/src/**/*.ts",
    "./src/Resources/app/administration/src/**/*.js",
    "./src/Resources/app/administration/src/**/*.tsx",
    "./src/Resources/app/administration/src/**/*.vue"
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ]
}
